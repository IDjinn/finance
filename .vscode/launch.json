    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Exponent Hermes - Experimental",
        "request": "launch",
        "type": "reactnativedirect",
        "cwd": "${workspaceFolder}",
        "platform": "exponent",
        "expoHostType": "lan"
      },
      {
        "name": "Debug in Exponent",
        "request": "launch",
        "type": "reactnative",
        "cwd": "${workspaceFolder}",
        "platform": "exponent",
        "expoHostType": "lan"
      },
      {
        "name": "Debug Android",
        "cwd": "${workspaceFolder}",
        "type": "reactnative",
        "request": "launch",
        "platform": "android"
      },
      {
        "type": "expo",
        "request": "attach",
        "name": "Debug Expo app",
        "projectRoot": "${workspaceFolder}",
        "bundlerPort": "8081",
        "bundlerHost": "127.0.0.1"
      }
    ]
  }